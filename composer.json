{
    "name": "webnuvola/antispambot",
    "description": "Stand-alone antispambot function from WordPress",
    "keywords": ["antispam", "antispambot", "email", "obfuscation", "spam", "wordpress"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Fabio Cagliero",
            "email": "fabio@webnuvola.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0",
        "phpunit/phpunit": "^9.6.4"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Webnuvola\\Antispambot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webnuvola\\Antispambot\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "illuminate/support": "Required to use antispambot_html function (^9.0||^10.0)"
    },
    "scripts": {
        "test": "phpunit --testdox"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
