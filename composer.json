{
    "name": "webnuvola/antispambot",
    "description": "Stand-alone antispambot function from WordPress",
    "keywords": ["antispam", "antispambot", "email", "obfuscation", "spam", "wordpress"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Fabio Cagliero",
            "email": "fabio@webnuvola.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "illuminate/support": "^9.0 || ^10.0 || ^11.0",
        "pestphp/pest": "^2.34"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Webnuvola\\Antispambot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webnuvola\\Antispambot\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "illuminate/support": "Required to use antispambot_html function (^9.0||^10.0||^11.0)"
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
